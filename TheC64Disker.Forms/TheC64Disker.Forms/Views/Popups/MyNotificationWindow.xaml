<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="at.markusegger.Application.TheC64Disker.Views.Popups.MyNotificationWindow"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title, Mode=OneWay}"
    >

    <ContentPage.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="CanMinimize" />
        </Style>
    </ContentPage.Style>

    <Grid
        x:Name="LayoutRoot"
        Margin="4">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--
            TODO
            From WPF:
            VerticalAlignment="Top"
        -->
        <Image
            x:Name="NotificationIcon"
            Grid.Row="0"
            Grid.Column="0"
            Width="32"
            Height="32"
            Margin="4,4,8,8"
            Source="{Binding NotificationIcon, Mode=OneWay}" />

        <!--<ContentControl
            Grid.Row="0"
            Grid.Column="1"
            Margin="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Content="{Binding Content, Mode=OneWay}" />-->

        <!-- TODO
            From WPF:
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            TextWrapping="Wrap" 
        -->
        <Label
            Grid.Row="0"
            Grid.Column="1"
            Margin="4"
            Text="{Binding Content, Mode=OneWay}"
            />

        <!-- TODO
            From WPF:
            MinWidth="75"
            MinHeight="25"
            MaxWidth="100"
            MaxHeight="50"
            HorizontalAlignment="Right"
            Click="OKButton_Click"
            Test="OK"
            IsDefault="True" 
        -->
        <Button
            x:Name="OKButton"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="4,12,4,4"
/>

    </Grid>

</ContentPage>
